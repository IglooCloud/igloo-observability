[Unit]
Description=Observability Server
After=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/home/azureuser/igloo-observability/build/server /home/azureuser/config.toml
WorkingDirectory=/home/azureuser

[Install]
WantedBy=multi-user.target
